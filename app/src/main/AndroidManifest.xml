<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.jerry960331.saihs_projects_2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_home2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_home4"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".BTActivity"
            android:label="@string/title_activity_bt"

            android:theme="@style/AppTheme.NoActionBar"></activity>

        <!-- register receiver for alarm-->
        <receiver android:name="app.jerry960331.saihs_projects_2.AlarmReceiver" android:process=".alarm"></receiver>
    </application>

</manifest>