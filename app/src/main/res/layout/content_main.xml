        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="______________________________"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/btnSkStat3"
            app:layout_constraintEnd_toEndOf="@+id/btnSkChart2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/swSk2"
            app:layout_constraintTop_toTopOf="@+id/btnSkStat2"
            app:layout_constraintVertical_bias="0.82" />

        <Switch
            android:id="@+id/swConnectionMethod"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
