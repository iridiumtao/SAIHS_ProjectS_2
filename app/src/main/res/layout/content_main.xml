            android:layout_marginBottom="8dp"
            android:text="______________________________"
            app:layout_constraintBottom_toTopOf="@+id/btnSkStat4"
            app:layout_constraintEnd_toEndOf="@+id/btnSkChart3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/swSk3"
            app:layout_constraintTop_toTopOf="@+id/btnSkStat3"
